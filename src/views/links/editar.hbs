<div class="container p-4">

    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/links/editar/{{links.id}}" method="POST">
                    <div class="form-group">

                        <input type="text" value="{{links.titulo}}"class="form-control" name='titulo' placeholder="Ingresa el titulo" autofocus>

                    </div>
                    <div class="form-group">
                        <input type="url" value="{{links.url}}" name ="url" class="form-control" placeholder="url">
                    </div>
                        <div class="form-group">
                        <textarea name="descripcion" value="{{links.descripcion}}" rows="2" class="form-control" placeholder="descripcion"></textarea>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-success btn-block">Guardar</button>
                    </div>
                    
                    </form>

                </div>
            </div>
        </div>


    </div>

</div>